/* Text */

@textFontSize: 1.35em;
@textMargin: 0.9em 0em 0.9em;

/* Content */
@contentMargin: @avatarWidth + @avatarSpacing + 1em;
@contentMarginRight: @avatarWidth + @avatarSpacing - 1em;

/* Avatar */
@avatarWidth: 3em;
@avatarBorderRadius: 0.4rem;

/* Metadata */
@metadataFontSize: 1.1em;

/* Author */
@authorFontSize: 1.4em;
@authorColor: @primaryColor;
